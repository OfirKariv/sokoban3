<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boot.SampleController">
   <top>
      <AnchorPane prefHeight="93.0" prefWidth="607.0" BorderPane.alignment="CENTER">
         <children>
            <HBox layoutX="51.0" layoutY="23.0" prefHeight="42.0" prefWidth="500.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#sortByTime" text="Time">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#sortBySteps" text="Steps">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#sortByName" text="Name">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </top>
   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" text="Name" />
          <TableColumn prefWidth="75.0" text="Level" />
            <TableColumn prefWidth="75.0" text="Steps" />
            <TableColumn prefWidth="75.0" text="Time" />
        </columns>
      </TableView>
   </center>
</BorderPane>
